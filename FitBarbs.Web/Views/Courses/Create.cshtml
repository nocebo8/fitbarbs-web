@model FitBarbs.Web.Models.Course
@using FitBarbs.Web.Models

<h2>Nowy kurs</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="block text-sm font-medium mb-1">Tytuł</label>
        <input asp-for="Title" class="w-full rounded-xl border border-[var(--fb-border)] px-3 py-2" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="block text-sm font-medium mb-1">Opis</label>
        <textarea asp-for="Description" class="w-full rounded-xl border border-[var(--fb-border)] px-3 py-2"></textarea>
    </div>
    <div class="mb-3">
        <label class="block text-sm font-medium mb-1">Poziom trudności</label>
        <select asp-for="Difficulty" asp-items="Html.GetEnumSelectList<DifficultyLevel>()" class="w-full rounded-xl border border-[var(--fb-border)] px-3 py-2"></select>
    </div>
    <div class="mb-3">
        <label class="block text-sm font-medium mb-1">Miniatura (jpg/png/webp)</label>
        <input type="file" name="thumbnail" accept="image/*" class="w-full rounded-xl border border-[var(--fb-border)] px-3 py-2" />
        <span asp-validation-for="ThumbnailPath" class="text-danger"></span>
    </div>
    <button type="submit" class="btn-primary">Zapisz</button>
    <a href="@Url.Action("Index")" class="btn-secondary">Anuluj</a>
    
</form>

<partial name="_ValidationScriptsPartial" />


