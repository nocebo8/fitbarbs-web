@model IEnumerable<FitBarbs.Web.Models.Course>
@using FitBarbs.Web.Models

<h2 class="text-3xl font-semibold tracking-tight mb-4">Kursy Pilates</h2>

<form method="get" class="mb-6 flex flex-wrap items-end gap-3">
  <div>
    <label class="text-sm text-[color:var(--fb-muted)]" for="level">Poziom</label>
    <select id="level" name="level" class="form-select" style="min-width: 220px;">
      <option value="">Wszystkie</option>
      <option value="@DifficultyLevel.Beginner">Początkujący</option>
      <option value="@DifficultyLevel.Intermediate">Średniozaawansowany</option>
      <option value="@DifficultyLevel.Advanced">Zaawansowany</option>
    </select>
  </div>
  <button class="btn-primary" type="submit">Filtruj</button>
  @if (User.IsInRole(ApplicationRoles.Instructor))
  {
    <a class="btn-secondary" href="@Url.Action("Create")">Dodaj kurs</a>
  }
</form>

<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
  @foreach (var course in Model)
  {
    @await Html.PartialAsync("~/Views/Shared/Components/CourseCard/Default.cshtml", course)
  }
</div>


