@model FitBarbs.Web.Models.HomeViewModel
@{
    ViewData["Title"] = "fitBarbs – pilates wideo";
}

<section class="hero mb-5">
    <div class="hero__content">
        <div class="container">
            <div class="row align-items-center g-5">
                <div class="col-12 col-lg-7 fade-up">
                    <div class="glass">
                        <h1 class="display-4 fw-bold">Pilates wideo dla każdego — ćwicz gdzie i kiedy chcesz</h1>
                        <p class="mt-3 text-hero-sub">Profesjonalne lekcje i plany treningowe prowadzone przez Barbie. Poziomy od podstaw do zaawansowanych, dostępne na każdym urządzeniu.</p>
                        <div class="mt-4 d-flex gap-2">
                            <a href="@Url.Action("Index","Courses")" class="btn btn-primary btn-lg">Rozpocznij ćwiczyć</a>
                            <a href="@Url.Action("Index","Courses")" class="btn btn-outline-brand btn-lg">Zobacz kursy</a>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-5 text-center fade-up">
                    <img src="~/img/hero_pilates.svg" alt="Sylwetka pilates" class="img-fluid" loading="lazy" />
                </div>
            </div>
        </div>
    </div>
</section>

<section class="container section" style="position:relative; z-index:1">
    <div class="row g-4">
        <div class="col-12 col-md-3 text-center">
            <div class="p-4 rounded-4 border h-100">
                <img src="~/img/feature_plans.svg" alt="Ikona planów treningowych" width="40" height="40" class="mb-2" loading="lazy" />
                <h6 class="mb-1">Plany treningowe</h6>
                <p class="text-muted small m-0">Cele na różne poziomy i potrzeby.</p>
            </div>
        </div>
        <div class="col-12 col-md-3 text-center">
            <div class="p-4 rounded-4 border h-100">
                <img src="~/img/feature_hd_video.svg" alt="Ikona wideo HD" width="40" height="40" class="mb-2" loading="lazy" />
                <h6 class="mb-1">Wideo HD</h6>
                <p class="text-muted small m-0">Jasny obraz, wyraźne instrukcje.</p>
            </div>
        </div>
        <div class="col-12 col-md-3 text-center">
            <div class="p-4 rounded-4 border h-100">
                <img src="~/img/feature_levels.svg" alt="Ikona różnych poziomów" width="40" height="40" class="mb-2" loading="lazy" />
                <h6 class="mb-1">Różne poziomy</h6>
                <p class="text-muted small m-0">Od podstaw do zaawansowanych.</p>
            </div>
        </div>
        <div class="col-12 col-md-3 text-center">
            <div class="p-4 rounded-4 border h-100">
                <img src="~/img/feature_devices.svg" alt="Ikona urządzeń – ćwicz gdzie chcesz" width="40" height="40" class="mb-2" loading="lazy" />
                <h6 class="mb-1">Ćwicz gdzie chcesz</h6>
                <p class="text-muted small m-0">Telefon, tablet lub komputer.</p>
            </div>
        </div>
    </div>
</section>

<section id="o-nas" class="container section">
    <div class="row align-items-center g-4">
        <div class="col-12 col-md-6">
            <h2 class="h3">O instruktorce</h2>
            <p class="text-muted">Barbie jest certyfikowaną instruktorką pilates z wieloletnim doświadczeniem. Tworzy programy, które łączą bezpieczeństwo, postęp i radość z ruchu.</p>
        </div>
        <div class="col-12 col-md-6 text-center">
            <img src="~/img/instructor_orb.svg" alt="Ilustracja – instruktor pilates" class="img-fluid rounded-circle shadow-sm" style="max-width:220px" loading="lazy" />
        </div>
    </div>
</section>

<section id="kontakt" class="container section">
    <div class="row g-3">
        <div class="col-12 col-md-8">
            <h2 class="h4">Kontakt</h2>
            <p class="text-muted">Masz pytanie? Napisz do nas: <a href="mailto:hello@fitbarbs.app">hello@fitbarbs.app</a></p>
        </div>
    </div>
</section>

<section class="container section" style="position:relative; z-index:1">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="h4 m-0">Polecane kursy</h2>
        <a class="btn btn-link" href="@Url.Action("Index","Courses")">Zobacz wszystkie</a>
    </div>
    <div class="row g-4">
        @foreach (var c in Model.FeaturedCourses)
        {
            <div class="col-12 col-sm-6 col-lg-4">
                @await Html.PartialAsync("~/Views/Shared/Components/CourseCard/Default.cshtml", c)
            </div>
        }
    </div>
</section>

