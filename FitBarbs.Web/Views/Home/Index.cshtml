@model FitBarbs.Web.Models.HomeViewModel
@{
    ViewData["Title"] = "fitBarbs – pilates wideo";
}

<section class="hero mb-5">
    <div class="hero__content">
        <div class="container">
            <div class="grid grid-cols-1 lg:grid-cols-12 items-center gap-5">
                <div class="lg:col-span-7 fade-up">
                    <div class="glass">
                        <h1 class="text-3xl md:text-4xl font-extrabold">Pilates wideo dla każdego — ćwicz gdzie i kiedy chcesz</h1>
                        <p class="mt-3 text-hero-sub">Profesjonalne lekcje i plany treningowe prowadzone przez Barbie. Poziomy od podstaw do zaawansowanych, dostępne na każdym urządzeniu.</p>
                        <div class="mt-4 flex gap-2">
                            <a href="@Url.Action("Index","Courses")" class="btn-primary text-lg">Rozpocznij ćwiczyć</a>
                            <a href="@Url.Action("Index","Courses")" class="btn-secondary text-lg">Zobacz kursy</a>
                        </div>
                    </div>
                </div>
                <div class="lg:col-span-5 text-center fade-up">
                    <img src="~/img/hero_pilates.svg" alt="Sylwetka pilates" class="inline-block max-w-full h-auto" loading="lazy" />
                </div>
            </div>
        </div>
    </div>
</section>

<section class="container section" style="position:relative; z-index:1">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="text-center">
            <div class="p-4 rounded-2xl border h-full">
                <img src="~/img/feature_plans.svg" alt="Ikona planów treningowych" width="40" height="40" class="mb-2" loading="lazy" />
                <h6 class="mb-1">Plany treningowe</h6>
                <p class="text-[color:var(--fb-muted)] text-sm m-0">Cele na różne poziomy i potrzeby.</p>
            </div>
        </div>
        <div class="text-center">
            <div class="p-4 rounded-2xl border h-full">
                <img src="~/img/feature_hd_video.svg" alt="Ikona wideo HD" width="40" height="40" class="mb-2" loading="lazy" />
                <h6 class="mb-1">Wideo HD</h6>
                <p class="text-[color:var(--fb-muted)] text-sm m-0">Jasny obraz, wyraźne instrukcje.</p>
            </div>
        </div>
        <div class="text-center">
            <div class="p-4 rounded-2xl border h-full">
                <img src="~/img/feature_levels.svg" alt="Ikona różnych poziomów" width="40" height="40" class="mb-2" loading="lazy" />
                <h6 class="mb-1">Różne poziomy</h6>
                <p class="text-[color:var(--fb-muted)] text-sm m-0">Od podstaw do zaawansowanych.</p>
            </div>
        </div>
        <div class="text-center">
            <div class="p-4 rounded-2xl border h-full">
                <img src="~/img/feature_devices.svg" alt="Ikona urządzeń – ćwicz gdzie chcesz" width="40" height="40" class="mb-2" loading="lazy" />
                <h6 class="mb-1">Ćwicz gdzie chcesz</h6>
                <p class="text-[color:var(--fb-muted)] text-sm m-0">Telefon, tablet lub komputer.</p>
            </div>
        </div>
    </div>
</section>

<section class="container section">
    <div class="grid grid-cols-1 md:grid-cols-2 items-center gap-4">
        <div>
            <h2 class="text-2xl font-semibold">O instruktorce</h2>
            <p class="text-[color:var(--fb-muted)]">Barbie jest certyfikowaną instruktorką pilates z wieloletnim doświadczeniem. Tworzy programy, które łączą bezpieczeństwo, postęp i radość z ruchu.</p>
        </div>
        <div class="text-center">
            <img src="~/img/instructor_orb.svg" alt="Ilustracja – instruktor pilates" class="inline-block max-w-[220px] h-auto rounded-full shadow-sm" loading="lazy" />
        </div>
    </div>
</section>

<section class="container section">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
        <div>
            <h2 class="text-xl font-semibold">Kontakt</h2>
            <p class="text-[color:var(--fb-muted)]">Masz pytanie? Napisz do nas: <a href="mailto:hello@fitbarbs.app">hello@fitbarbs.app</a></p>
        </div>
    </div>
</section>

<section class="container section" style="position:relative; z-index:1">
    <div class="flex items-center justify-between mb-3">
        <h2 class="h4 m-0">Polecane kursy</h2>
        <a class="text-[color:var(--fb-muted)] hover:underline underline-offset-4 decoration-neutral-500/50" href="@Url.Action("Index","Courses")">Zobacz wszystkie</a>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        @foreach (var c in Model.FeaturedCourses)
        {
            <div>
                @await Html.PartialAsync("~/Views/Shared/Components/CourseCard/Default.cshtml", c)
            </div>
        }
    </div>
</section>

