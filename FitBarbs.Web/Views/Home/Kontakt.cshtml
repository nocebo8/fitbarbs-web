@{
    ViewData["Title"] = "Kontakt";
}

<section class="container py-5">
  <div class="row g-4">
    <div class="col-12 col-lg-6">
      <h1 class="display-6 fw-bold mb-3">Skontaktuj się z nami</h1>
      <p class="text-muted">Masz pytania o plan treningowy, dobór poziomu lub abonament? Napisz — odpowiemy w 24h.</p>

      <div class="mt-4">
        <h2 class="h6 text-uppercase text-muted">Email</h2>
        <p class="m-0"><a href="mailto:hello@fitbarbs.app">hello@fitbarbs.app</a></p>
      </div>
      <div class="mt-3">
        <h2 class="h6 text-uppercase text-muted">Social</h2>
        <ul class="list-unstyled m-0">
          <li><a href="#">Instagram</a></li>
          <li><a href="#">YouTube</a></li>
        </ul>
      </div>
      <div class="mt-3">
        <h2 class="h6 text-uppercase text-muted">Godziny odpowiedzi</h2>
        <p class="text-muted m-0">Pon-Pt 9:00–17:00</p>
      </div>
    </div>

    <div class="col-12 col-lg-6">
      <div class="p-4 rounded-4 border h-100">
        <h2 class="h5">Krótki formularz</h2>
        <form>
          <div class="mb-3">
            <label class="form-label">Imię</label>
            <input class="form-control" placeholder="Twoje imię" />
          </div>
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" placeholder="name@example.com" />
          </div>
          <div class="mb-3">
            <label class="form-label">Wiadomość</label>
            <textarea class="form-control" rows="4" placeholder="W czym możemy pomóc?"></textarea>
          </div>
          <button type="button" class="btn btn-primary" disabled>Wyślij (wkrótce)</button>
        </form>
      </div>
    </div>
  </div>
  <p class="small text-muted text-end mt-3">Ostatnia aktualizacja: @DateTime.UtcNow.ToString("yyyy-MM-dd")</p>
</section>


