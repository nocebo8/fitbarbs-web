@{
    ViewData["Title"] = "Kontakt";
}

<section class="container py-5">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
    <div>
      <h1 class="text-2xl md:text-3xl font-extrabold mb-3">Skontaktuj się z nami</h1>
      <p class="text-muted">Masz pytania o plan treningowy, dobór poziomu lub abonament? Napisz — odpowiemy w 24h.</p>

      <div class="mt-4">
        <h2 class="text-xs uppercase text-[color:var(--fb-muted)]">Email</h2>
        <p class="m-0"><a href="mailto:hello@fitbarbs.app">hello@fitbarbs.app</a></p>
      </div>
      <div class="mt-3">
        <h2 class="text-xs uppercase text-[color:var(--fb-muted)]">Social</h2>
        <ul class="list-unstyled m-0">
          <li><a href="#">Instagram</a></li>
          <li><a href="#">YouTube</a></li>
        </ul>
      </div>
      <div class="mt-3">
        <h2 class="text-xs uppercase text-[color:var(--fb-muted)]">Godziny odpowiedzi</h2>
        <p class="text-muted m-0">Pon-Pt 9:00–17:00</p>
      </div>
    </div>

    <div>
      <div class="p-4 rounded-4 border h-100">
        <h2 class="h5">Krótki formularz</h2>
        <form>
          <div class="mb-3">
            <label class="block text-sm font-medium mb-1">Imię</label>
            <input class="w-full rounded-xl border border-[var(--fb-border)] px-3 py-2" placeholder="Twoje imię" />
          </div>
          <div class="mb-3">
            <label class="block text-sm font-medium mb-1">Email</label>
            <input type="email" class="w-full rounded-xl border border-[var(--fb-border)] px-3 py-2" placeholder="name@example.com" />
          </div>
          <div class="mb-3">
            <label class="block text-sm font-medium mb-1">Wiadomość</label>
            <textarea class="w-full rounded-xl border border-[var(--fb-border)] px-3 py-2" rows="4" placeholder="W czym możemy pomóc?"></textarea>
          </div>
          <button type="button" class="btn-primary" disabled>Wyślij (wkrótce)</button>
        </form>
      </div>
    </div>
  </div>
  <p class="text-sm text-[color:var(--fb-muted)] text-end mt-3">Ostatnia aktualizacja: @DateTime.UtcNow.ToString("yyyy-MM-dd")</p>
</section>


