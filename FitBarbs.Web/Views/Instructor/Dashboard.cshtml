@model IEnumerable<FitBarbs.Web.Models.Course>

@{
    // Hero nagłówek panelu: większa typografia i subtelny podtytuł
}
<section class="container px-4 md:px-6 py-6">
  <div class="flex flex-col gap-2 md:flex-row md:items-end md:justify-between">
    <div>
      <h1 class="text-2xl md:text-3xl font-extrabold tracking-tight">Panel instruktora</h1>
      <p class="text-sm md:text-base text-[color:var(--fb-muted)]">Zarządzaj kursami, dodawaj lekcje i monitoruj zawartość.</p>
    </div>
    @* CTA wyrównane dla spójności układu *@
    <div class="mt-3 md:mt-0">
      <a class="btn-primary" href="@Url.Action("Create", "Courses")">Nowy kurs</a>
    </div>
  </div>

  @* Karta z listą kursów *@
  <div class="card mt-4 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="w-full text-left">
        <thead class="bg-surface">
          <tr class="text-sm text-[color:var(--fb-muted)]">
            <th class="py-3 px-4 font-semibold">Kurs</th>
            <th class="py-3 px-4 font-semibold">Poziom</th>
            <th class="py-3 px-4 font-semibold">Lekcje</th>
            <th class="py-3 px-4 font-semibold text-right">Akcje</th>
          </tr>
        </thead>
        <tbody>
        @foreach (var c in Model)
        {
          <tr class="border-t border-[var(--fb-border)]">
            <td class="py-3 px-4 align-top">
              <div class="font-semibold">@c.Title</div>
              @* Znacznik poziomu bliżej tytułu, pastelowe tło *@
              <div class="mt-1">
                <span class="badge">@c.Difficulty</span>
              </div>
            </td>
            <td class="py-3 px-4 align-top text-sm text-[color:var(--fb-muted)]">@c.Difficulty</td>
            <td class="py-3 px-4 align-top">@c.Lessons.Count</td>
            <td class="py-3 px-4 align-top">
              <div class="flex justify-end">
                <a class="btn-secondary" href="@Url.Action("Details", "Courses", new { id = c.Id })">Szczegóły</a>
              </div>
            </td>
          </tr>
        }
        </tbody>
      </table>
    </div>
  </div>
</section>
