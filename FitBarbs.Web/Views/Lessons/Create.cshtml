@model FitBarbs.Web.Models.Lesson

<h2>Nowa lekcja</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="CourseId" />
    <div class="mb-3">
        <label class="block text-sm font-medium mb-1">Tytu≈Ç</label>
        <input asp-for="Title" class="w-full rounded-xl border border-[var(--fb-border)] px-3 py-2" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="block text-sm font-medium mb-1">Opis</label>
        <textarea asp-for="Description" class="w-full rounded-xl border border-[var(--fb-border)] px-3 py-2"></textarea>
    </div>
    <div class="mb-3">
        <label class="block text-sm font-medium mb-1">Wideo (mp4)</label>
        <input type="file" name="video" accept="video/*" class="w-full rounded-xl border border-[var(--fb-border)] px-3 py-2" />
        <span asp-validation-for="VideoPath" class="text-danger"></span>
    </div>
    <button type="submit" class="btn-primary">Zapisz</button>
    <a href="@Url.Action("Details", "Courses", new { id = Model.CourseId })" class="btn-secondary">Anuluj</a>
</form>

<partial name="_ValidationScriptsPartial" />


