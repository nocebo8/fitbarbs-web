@model FitBarbs.Web.Models.ProfileViewModel
@using FitBarbs.Web.Models

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<div class="mb-6">
  <h1 class="text-2xl md:text-3xl font-extrabold tracking-tight">@Localizer["Mój profil"]</h1>
  <p class="text-[color:var(--fb-muted)] mt-1">@Localizer["Dostosuj sposób działania lekcji i propozycji treningów."]</p>
</div>

@if (TempData["Saved"] != null)
{
  <div role="alert" aria-live="polite" class="mb-4 rounded-2xl border border-[var(--fb-border)] bg-green-50 text-green-800 px-4 py-3">@Localizer["Zapisano ustawienia."]</div>
}

<div class="grid grid-cols-1 xl:grid-cols-3 gap-6">
  <div class="xl:col-span-2 space-y-6">
    <form method="post" class="rounded-2xl shadow-sm border border-[var(--fb-border)] bg-white dark:bg-neutral-900 dark:border-neutral-800">
      <div class="p-6">
        <h2 class="text-lg font-semibold">@Localizer["Mój profil"]</h2>
        <div class="mt-4 grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="Profile_TargetDailyMinutes" class="block text-sm font-medium mb-1">@Localizer["Docelowy czas nauki (min/dzień)"]</label>
            <input id="Profile_TargetDailyMinutes" asp-for="Profile.TargetDailyMinutes" type="number" min="5" max="180" aria-describedby="hint-minutes" class="w-full rounded-xl border border-[var(--fb-border)] px-3 py-2 focus:outline-none focus:ring-2 focus:ring-brand focus:ring-offset-2" />
            <p id="hint-minutes" class="text-xs text-[color:var(--fb-muted)] mt-1">@Localizer["Zakres 5–180 minut dziennie."]</p>
            <span asp-validation-for="Profile.TargetDailyMinutes" class="text-[color:var(--fb-error)] text-sm"></span>
          </div>
          <div>
            <label for="Profile_PreferredDifficulty" class="block text-sm font-medium mb-1">@Localizer["Preferowany poziom"]</label>
            <select id="Profile_PreferredDifficulty" asp-for="Profile.PreferredDifficulty" asp-items="Html.GetEnumSelectList<DifficultyLevel>()" class="w-full rounded-xl border border-[var(--fb-border)] px-3 py-2 focus:outline-none focus:ring-2 focus:ring-brand focus:ring-offset-2"></select>
          </div>
        </div>

        <div class="mt-6">
          <h3 class="text-base font-semibold">@Localizer["Preferencje użytkownika"]</h3>
          <div class="mt-3 grid grid-cols-1 gap-4">
            <div class="flex items-start justify-between gap-3">
              <div class="flex-1">
                <label class="block text-sm font-medium mb-1" for="Profile_Preferences_AutoCompleteLessonAfterWatch">@Localizer["Automatycznie oznacz lekcję jako ukończoną po obejrzeniu"]</label>
                <p id="hint-auto" class="text-xs text-[color:var(--fb-muted)]">@Localizer["Po obejrzeniu wideo lekcji automatycznie oznaczaj lekcję jako ukończoną."]</p>
              </div>
              <input id="Profile_Preferences_AutoCompleteLessonAfterWatch" asp-for="Profile.Preferences.AutoCompleteLessonAfterWatch" type="checkbox" class="h-5 w-10 rounded-full accent-brand focus:ring-2 focus:ring-brand" aria-describedby="hint-auto" />
            </div>
            <div class="flex items-start justify-between gap-3">
              <div class="flex-1">
                <label class="block text-sm font-medium mb-1" for="Profile_Preferences_PlayNextAutomatically">@Localizer["Automatycznie odtwarzaj następną lekcję"]</label>
              </div>
              <input id="Profile_Preferences_PlayNextAutomatically" asp-for="Profile.Preferences.PlayNextAutomatically" type="checkbox" class="h-5 w-10 rounded-full accent-brand focus:ring-2 focus:ring-brand" />
            </div>
            <div class="flex items-start justify-between gap-3">
              <div class="flex-1">
                <label class="block text-sm font-medium mb-1" for="Profile_Preferences_EmailProgressSummaries">@Localizer["Podsumowanie postępów e‑mailem (tygodniowo)"]</label>
              </div>
              <input id="Profile_Preferences_EmailProgressSummaries" asp-for="Profile.Preferences.EmailProgressSummaries" type="checkbox" class="h-5 w-10 rounded-full accent-brand focus:ring-2 focus:ring-brand" />
            </div>
          </div>
        </div>
      </div>
      <div class="sticky bottom-0 border-t border-[var(--fb-border)] bg-white/90 dark:bg-neutral-900/80 backdrop-blur p-4 rounded-b-2xl flex justify-end">
        <button type="submit" class="btn-primary" aria-live="polite">@Localizer["Zapisz"]</button>
      </div>
    </form>
  </div>

  <aside class="xl:col-span-1">
    <div class="rounded-2xl shadow-sm border border-[var(--fb-border)] bg-white dark:bg-neutral-900 dark:border-neutral-800 p-6">
      <h2 class="text-lg font-semibold">@Localizer["Polecane dla Ciebie"]</h2>
      <div class="mt-4 grid grid-cols-1 gap-3">
        @foreach (var course in Model.RecommendedCourses)
        {
          <div class="rounded-xl border border-[var(--fb-border)] p-4">
            <div class="flex items-start justify-between gap-3">
              <div class="min-w-0 max-w-full">
                <h3 class="font-medium truncate">@course.Title</h3>
                <p class="text-sm text-[color:var(--fb-muted)] line-clamp-3 break-words">@course.Description</p>
              </div>
              <span class="badge shrink-0">@course.Difficulty</span>
            </div>
            <div class="mt-3">
              <a class="btn-secondary" href="@Url.Action("Details", "Courses", new { id = course.Id })">@Localizer["Zobacz"]</a>
            </div>
          </div>
        }
        @if (!Model.RecommendedCourses.Any())
        {
          <div class="text-sm text-[color:var(--fb-muted)]">@Localizer["Brak rekomendacji."]</div>
        }
      </div>
    </div>
  </aside>
    </div>

<partial name="_ValidationScriptsPartial" />

<div class="mt-8">
  <h2 class="text-lg font-semibold">@Localizer["Moje kursy"]</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-3">
    @foreach (var e in Model.MyEnrollments)
    {
        var progress = Model.ProgressByCourseId.ContainsKey(e.CourseId) ? Model.ProgressByCourseId[e.CourseId] : 0;
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">@e.Course?.Title</h5>
                    <p class="card-text">@e.Course?.Description</p>
                <div class="w-full h-2 bg-[var(--fb-border)] rounded">
                    <div class="h-2 bg-brand rounded" style="width:@progress%"></div>
                </div>
                </div>
                <div class="card-footer">
                    <a class="btn-secondary" href="@Url.Action("Details", "Courses", new { id = e.CourseId })">Przejdź</a>
                </div>
            </div>
        </div>
    }
    @if (!Model.MyEnrollments.Any())
    {
        <div>Brak zapisów.</div>
    }
  </div>
</div>

<hr />
<h3>Polecane dla Ciebie</h3>
<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    @foreach (var course in Model.RecommendedCourses)
    {
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">@course.Title</h5>
                    <p class="card-text">@course.Description</p>
                <span class="badge">@course.Difficulty</span>
                </div>
                <div class="card-footer">
                    <a class="btn-secondary" href="@Url.Action("Details", "Courses", new { id = course.Id })">Zobacz</a>
                </div>
            </div>
        </div>
    }
    @if (!Model.RecommendedCourses.Any())
    {
        <div>Brak rekomendacji.</div>
    }
</div>


