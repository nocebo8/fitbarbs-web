@model FitBarbs.Web.Models.ProfileViewModel
@using FitBarbs.Web.Models

<h2>Mój profil</h2>

@if (TempData["Saved"] != null)
{
    <div class="alert alert-success">Zapisano ustawienia.</div>
}

<form method="post">
    <div class="mb-3" style="max-width: 320px;">
        <label class="block text-sm font-medium mb-1">Docelowy czas nauki (min/dzień)</label>
        <input asp-for="Profile.TargetDailyMinutes" type="number" class="w-full rounded-xl border border-[var(--fb-border)] px-3 py-2" min="5" max="240" />
        <span asp-validation-for="Profile.TargetDailyMinutes" class="text-danger"></span>
    </div>
    <div class="mb-3" style="max-width: 320px;">
        <label class="block text-sm font-medium mb-1">Preferowany poziom</label>
        <select asp-for="Profile.PreferredDifficulty" asp-items="Html.GetEnumSelectList<DifficultyLevel>()" class="w-full rounded-xl border border-[var(--fb-border)] px-3 py-2"></select>
    </div>
    <button type="submit" class="btn-primary">Zapisz</button>
</form>

<partial name="_ValidationScriptsPartial" />

<hr />
<h3>Moje kursy</h3>
<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    @foreach (var e in Model.MyEnrollments)
    {
        var progress = Model.ProgressByCourseId.ContainsKey(e.CourseId) ? Model.ProgressByCourseId[e.CourseId] : 0;
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">@e.Course?.Title</h5>
                    <p class="card-text">@e.Course?.Description</p>
                <div class="w-full h-2 bg-[var(--fb-border)] rounded">
                    <div class="h-2 bg-brand rounded" style="width:@progress%"></div>
                </div>
                </div>
                <div class="card-footer">
                    <a class="btn-secondary" href="@Url.Action("Details", "Courses", new { id = e.CourseId })">Przejdź</a>
                </div>
            </div>
        </div>
    }
    @if (!Model.MyEnrollments.Any())
    {
        <div>Brak zapisów.</div>
    }
</div>

<hr />
<h3>Polecane dla Ciebie</h3>
<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    @foreach (var course in Model.RecommendedCourses)
    {
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">@course.Title</h5>
                    <p class="card-text">@course.Description</p>
                <span class="badge">@course.Difficulty</span>
                </div>
                <div class="card-footer">
                    <a class="btn-secondary" href="@Url.Action("Details", "Courses", new { id = course.Id })">Zobacz</a>
                </div>
            </div>
        </div>
    }
    @if (!Model.RecommendedCourses.Any())
    {
        <div>Brak rekomendacji.</div>
    }
</div>


