@model FitBarbs.Web.ViewComponents.ToggleViewComponent.ToggleParams
<div class="flex items-start justify-between gap-3">
  <div class="flex-1">
    @if (!string.IsNullOrWhiteSpace(Model.Label))
    {
      <label class="block text-sm font-medium mb-1" for="@Model.Id">@Model.Label</label>
    }
    @if (!string.IsNullOrWhiteSpace(Model.Hint))
    {
      <p id="@Model.DescribedBy" class="text-xs text-[color:var(--fb-muted)]">@Model.Hint</p>
    }
  </div>
  <input type="checkbox" name="@Model.Name" id="@Model.Id" @(Model.IsChecked ? "checked" : null) class="h-5 w-10 rounded-full accent-brand focus:ring-2 focus:ring-brand" aria-describedby="@Model.DescribedBy" />
</div>


