<header class="sticky top-0 z-50 bg-white/80 backdrop-blur border-b border-black/5">
  <div class="mx-auto max-w-[1200px] px-4 md:px-6 h-16 flex items-center gap-6">
    <a href="~/" class="text-2xl font-extrabold tracking-tight select-none focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-violet-600 rounded-xl">
      <span class="bg-gradient-to-r from-pink-500 via-fuchsia-500 to-violet-600 bg-clip-text text-transparent">fitBarbs</span>
    </a>

    <nav class="hidden md:flex items-center gap-6 text-[15px]">
      <a class="text-neutral-900 hover:text-violet-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-violet-600 rounded-lg" href="@Url.Action("ONas","Home")">O nas</a>
      <a class="text-neutral-900 hover:text-violet-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-violet-600 rounded-lg" href="@Url.Action("Index","Courses")">Kursy</a>
      <a class="text-neutral-900 hover:text-violet-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-violet-600 rounded-lg" href="@Url.Action("Pricing","Home")">Cennik</a>
      <a class="text-neutral-900 hover:text-violet-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-violet-600 rounded-lg" href="@Url.Action("Blog","Home")">Blog</a>
      @if (User.IsInRole(FitBarbs.Web.Models.ApplicationRoles.Instructor)) {
        <a class="text-neutral-900 hover:text-violet-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-violet-600 rounded-lg" href="~/Instructor/Dashboard">Panel instruktora</a>
      }
    </nav>

    <div class="ml-auto hidden md:flex items-center gap-3">
      @if (User?.Identity?.IsAuthenticated ?? false) {
        <span class="px-3 py-2 text-neutral-700">@User.Identity!.Name</span>
        <a href="@Url.Action("Index","Profile")" class="px-3 py-2 rounded-xl text-neutral-900 hover:text-violet-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-violet-600">Konto</a>
        <form method="post" action="~/Identity/Account/Logout">
          <button type="submit" class="px-3 py-2 rounded-xl hover:bg-black/5 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-violet-600">Wyloguj</button>
        </form>
      } else {
        <a href="~/Identity/Account/Login" class="px-3 py-2 rounded-xl hover:bg-black/5 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-violet-600">Zaloguj</a>
        <a href="~/Identity/Account/Register" class="px-4 py-2 rounded-2xl font-semibold text-white bg-gradient-to-r from-pink-500 via-fuchsia-500 to-violet-600 hover:brightness-95 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-violet-600">Dołącz</a>
      }
    </div>

    <!-- Mobile -->
    <button id="menu-btn" class="md:hidden ml-auto inline-flex w-10 h-10 items-center justify-center rounded-xl border border-black/10 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-violet-600" aria-label="Otwórz menu" aria-controls="mobile-menu" aria-expanded="false">
      <svg width="22" height="22" viewBox="0 0 24 24" fill="none" aria-hidden="true"><path d="M4 6h16M4 12h16M4 18h16" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
    </button>
  </div>

  <div id="mobile-menu" class="md:hidden hidden border-t border-black/5">
    <div class="px-4 py-3 flex flex-col gap-2">
      <a href="@Url.Action("ONas","Home")" class="py-2 text-neutral-900 hover:text-violet-700">O nas</a>
      <a href="@Url.Action("Index","Courses")" class="py-2 text-neutral-900 hover:text-violet-700">Kursy</a>
      <a href="@Url.Action("Pricing","Home")" class="py-2 text-neutral-900 hover:text-violet-700">Cennik</a>
      <a href="@Url.Action("Blog","Home")" class="py-2 text-neutral-900 hover:text-violet-700">Blog</a>
      <a href="@Url.Action("Kontakt","Home")" class="py-2 text-neutral-900 hover:text-violet-700">Kontakt</a>
      @if (User.IsInRole(FitBarbs.Web.Models.ApplicationRoles.Instructor)) {
        <a href="~/Instructor/Dashboard" class="py-2 text-neutral-900 hover:text-violet-700">Panel instruktora</a>
      }
      @if (User?.Identity?.IsAuthenticated ?? false) {
        <span class="py-2 text-neutral-700">@User.Identity!.Name</span>
        <a href="@Url.Action("Index","Profile")" class="py-2 text-neutral-900 hover:text-violet-700">Konto</a>
        <form method="post" action="~/Identity/Account/Logout"><button class="py-2 text-left hover:text-violet-700">Wyloguj</button></form>
      } else {
        <a href="~/Identity/Account/Login" class="py-2 text-neutral-900 hover:text-violet-700">Zaloguj</a>
        <a href="~/Identity/Account/Register" class="mt-1 px-4 py-2 rounded-2xl font-semibold text-white bg-gradient-to-r from-pink-500 via-fuchsia-500 to-violet-600 text-center">Dołącz</a>
      }
    </div>
  </div>
</header>
<script>
  (() => {
    const b = document.getElementById('menu-btn'); const m = document.getElementById('mobile-menu');
    if (!b || !m) return;
    b.addEventListener('click', () => { const open = m.classList.toggle('hidden') === false; b.setAttribute('aria-expanded', String(open)); });
  })();
</script>


