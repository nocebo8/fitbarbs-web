<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitBarbs.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" />
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <meta name="color-scheme" content="dark light">
    <link rel="stylesheet" href="~/FitBarbs.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <a class="visually-hidden-focusable position-absolute top-0 start-0 m-2 p-2 bg-white border rounded" href="#main">Skip to content</a>
    <header>
        <nav class="navbar sticky-top navbar-light bg-white border-bottom shadow-sm" style="border-color: var(--fb-border) !important; z-index:1030;">
            <div class="container-fluid d-flex align-items-center justify-content-between">
                <a class="navbar-brand fw-semibold m-0" asp-area="" asp-controller="Home" asp-action="Index">fitBarbs</a>
                <ul class="navbar-nav d-flex flex-row gap-3 m-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Courses" asp-action="Index">Kursy</a>
                        </li>
                        <li class="nav-item"><a class="nav-link text-dark" href="#o-nas">O nas</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" href="#kontakt">Kontakt</a></li>
                </ul>
                <div class="d-flex align-items-center gap-2">
                        <a class="btn btn-primary" asp-controller="Courses" asp-action="Index">Zacznij ćwiczyć</a>
                        <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main id="main" role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FitBarbs.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
